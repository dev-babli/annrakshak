{
  "expo": {
    "name": "Ann Rakshak",
    "slug": "ann-rakshak-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "annrakshak",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "AI-powered plant disease detection and pesticide control system",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.annrakshak.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to capture plant images for disease detection.",
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to track field zones and GPS coordinates.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select plant images for analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#4CAF50",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png"
      },
      "package": "com.annrakshak.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#4CAF50",
          "dark": {
            "backgroundColor": "#2E7D32"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Ann Rakshak to access your camera to capture plant images for disease detection."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Ann Rakshak to use your location to track field zones and GPS coordinates."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4CAF50",
          "defaultChannel": "default"
        }
      ]
    ],
    "experiments": {
    },
    "extra": {
      "eas": {
        "projectId": "417a0cdb-d785-4975-a3b5-ce4e0ab057af"
      }
    },
    "owner": "soumeet"
  }
}
